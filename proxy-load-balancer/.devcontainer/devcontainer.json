{
  "name": "ProxyScrape Interview Task - PHP 8.2",
  "image": "mcr.microsoft.com/devcontainers/php:8.2",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "onCreateCommand": {
    "install-deps": "composer install",
    "generate-key": "php artisan key:generate --force",
    "verify-setup": "php -v && composer --version"
  },

  "postCreateCommand": "echo '\nâœ… Setup Complete!\n' && echo 'PHP Version:' && php -v && echo '\nğŸ“¦ Composer installed' && echo '\nğŸ”‘ Laravel key generated' && echo '\nâ–¶ï¸  Run tests: vendor/bin/phpunit' && echo '\nğŸ“ Edit code: app/Services/PricingCalculator.php\n'",

  "postStartCommand": "echo 'ğŸš€ Codespace ready! Run: vendor/bin/phpunit'",

  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "MehediDracula.php-namespace-resolver"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "forwardPorts": [8000],

  "remoteUser": "vscode"
}

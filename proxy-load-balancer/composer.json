{
    "name": "proxyscrape/load-balancer",
    "type": "project",
    "description": "ProxyScrape Smart Proxy Load Balancer - Interview Task",
    "keywords": ["laravel", "proxy", "load-balancer"],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "laravel/framework": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-autoload-dump": [
            "@php -r \"is_dir('storage/framework/sessions') || mkdir('storage/framework/sessions', 0755, true);\"",
            "@php -r \"is_dir('storage/framework/views') || mkdir('storage/framework/views', 0755, true);\"",
            "@php -r \"is_dir('storage/framework/cache') || mkdir('storage/framework/cache', 0755, true);\"",
            "@php -r \"is_dir('storage/app/public') || mkdir('storage/app/public', 0755, true);\"",
            "@php -r \"is_dir('storage/logs') || mkdir('storage/logs', 0755, true);\"",
            "@php -r \"is_dir('bootstrap/cache') || mkdir('bootstrap/cache', 0755, true);\"",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
